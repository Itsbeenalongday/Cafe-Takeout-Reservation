<style>
a {
  text-decoration: none !important;
}
.menu-image {
  min-height: 400px; 
  max-width:100%; 
  max-height:100%; 
  background-size: cover; 
  background-position: center;
  position: relative;
}

.menu-name{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
.hero-image {
  background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("/images/background.jpg");
  height: 350px !important;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
}
.hero-text {
  text-align: center !important;
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white !important;
}
.hero-text > img {
  min-height: 120px;
  min-width: 120px;
}
.coffee-card {
  min-height: 480px;
  min-width: 320px !important;
  border-radius: 15px;
}
.coffee-card > img {
  height: 350px;
  width :500px;
  overflow: hidden;
  display: block;
  left: 70%;
  margin-left: -100%;
  position: relative;
}
</style>

<div class="hero-image">
  <div class="hero-text">
    <h1 class="mt-3 ml-4 text-white">메뉴 주문</h1>
  </div>
</div>
<div class="container my-4">
  <h2>Menu</h2>
  <hr class="mt-3 mb-5"/>
  <div class="row justify-content-center text-center">
    <% @menu.each do |menu|%>
      <div class="col-3 card coffee-card px-0 mx-2 mb-4" style="background-color: #f2f2f2">
        <div class="text-left">
          <%= link_to "+", add_to_cart_orders_path(product_description_id: menu.id ), class: "font-weight-bold float-right mr-3", style: "font-size: 30px;" %>
        </div>
        <img src="/images/아메리카노2.jpg" class="card-img-top">
        <div class="card-body text-center main-font mb-2">
          <h4 class="card-text font-weight-bold"><%= link_to "#{menu.name}", menu_path(menu.id) %></h4>
          <div style="font-size: 19px;"><%= number_with_delimiter menu.price %> 원</div>
          <div class="qty mt-5">
            <input type="number" class="form-control count" name="qty" value="1" min="1">
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
